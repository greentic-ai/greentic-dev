{
  "$id": "https://greentic-ai.github.io/component-{{component_kebab}}/schemas/v1/{{component_kebab}}.node.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "{{component_pascal}} Node",
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "{{component_name}}"
    },
    "id": {
      "type": "string"
    },
    "inputs": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "Message to emit from the {{component_name}} component."
        }
      },
      "required": ["message"],
      "additionalProperties": false
    }
  },
  "required": ["component", "inputs"],
  "additionalProperties": false
}
